<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaafCity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SaafCity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Status" parent="Theme.AppCompat.Light.NoActionBar"> <item name="colorPrimaryDark">@color/colorOfStatusBar</item></style>
    <style name="Theme.SaafCity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#E4B62A</item>
        <item name="colorControlActivated">#223908</item>
    </style>
    <style name="Theme.SaafCity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>