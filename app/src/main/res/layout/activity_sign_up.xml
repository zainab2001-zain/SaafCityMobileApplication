<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfaf8"
    tools:context="com.example.saafcitybuiseness.SignUpActivity">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="86dp"
        android:layout_height="83dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/profile_photo_icon" />

    <EditText
        android:id="@+id/name"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView9"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:layout_marginTop="40dp"

        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Enter Your Name"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />
    <EditText
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/baseline_email_24"
        android:layout_marginTop="30dp"
        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Enter Your Email"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:layout_marginTop="30dp"
        android:inputType="phone"
        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Enter Your Phone"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />

    <EditText
        android:id="@+id/dateofbirth"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/phone"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:layout_marginTop="30dp"
        android:inputType="date"
        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Enter Your Date Of Birth"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />
    <EditText
        android:id="@+id/location"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/dateofbirth"
        android:layout_centerHorizontal="false"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:inputType="text"
        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Enter Your location"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />

    <Button
        android:id="@+id/getlocationbtn"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@id/dateofbirth"
        android:text="Get"
        android:backgroundTint="#485C48"
        android:padding="0dp"
        android:textColor="@color/white"

        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/location"/>
    <EditText
        android:id="@+id/password_signup"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/location"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Enter Your Password"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"

        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />


    <EditText
        android:id="@+id/password_reenter"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/password_signup"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:background="#309F9D9D"
        android:drawablePadding="20dp"
        android:hint="Re-enter Your Password"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="20dp"

        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#171B17"
        android:textColorLink="@color/black" />

    <Button
        android:id="@+id/signup"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textColor="@color/white"
        app:backgroundTint="#1B3501"
        android:layout_below="@id/password_reenter"/>
</RelativeLayout>