<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfaf8"
    tools:context="com.buiseness.saafcitybuiseness.SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/whatsapp_image_2022_10_30_at_19_00_12_removebg_preview" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="86dp"
            android:layout_height="83dp"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="160dp"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="-36dp"
            app:layout_constraintBottom_toTopOf="@+id/emailtextfield"
            app:srcCompat="@drawable/profile_photo_icon" />
        <EditText
            android:id="@+id/urltextfield"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@id/imageView5"
            android:layout_marginLeft="55dp"
            android:drawableLeft="@drawable/baseline_link_24"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="#309F9D9D"
            android:drawablePadding="20dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter your IP Address"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:paddingLeft="20dp"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="#171B17"
            android:textColorLink="@color/black" />
        <EditText
            android:id="@+id/emailtextfield"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@id/urltextfield"
            android:layout_marginLeft="55dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="#309F9D9D"
            android:drawablePadding="20dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter Email or Phone No"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:paddingLeft="20dp"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="#171B17"
            android:textColorLink="@color/black" />

        <EditText
            android:id="@+id/password_field"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/emailtextfield"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:background="#309F9D9D"
            android:drawablePadding="20dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:shadowColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="#171B17"
            android:textColorLink="@color/black" />

        <TextView
            android:id="@+id/forget_pass"
            android:layout_width="151dp"
            android:layout_height="30dp"
            android:layout_below="@id/password_field"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="Forget Password?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signinbtn"
            android:layout_width="167dp"
            android:layout_height="51dp"
            android:layout_below="@id/forget_pass"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:layout_centerHorizontal="true"

            android:backgroundTint="@color/design_default_color_on_secondary"
            android:text="Sign In"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/signupbtn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/signinbtn"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:text="SignUp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>