<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfaf8"
    tools:context="com.buiseness.saafcitybuiseness.Verification_Number_Screen">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="150dp"

        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/profile_photo_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="25dp"
        android:textColor="@color/black"
        android:text="Please enter the verification number sent to your email or phone no."
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/resendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:text="Resend"

        android:textColor="#061E07"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="#309F9D9D"
        android:textColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        />


    <Button
        android:id="@+id/sendbutton"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_below="@id/number1"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="67dp"
        android:text="Send"
        android:textColor="@color/white"
        app:backgroundTint="#1B3501" />
</RelativeLayout>